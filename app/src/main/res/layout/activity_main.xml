<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahshing.qiupprogrammesenquiryapplication.MainActivity">

    <Button
        android:id="@+id/enquiryButton"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:onClick="enquiryProgrammes"
        android:text="Enquiry Programmes"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/captureDataButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <Button
        android:id="@+id/captureDataButton"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:layout_marginTop="232dp"
        android:onClick="captureData"
        android:text="Key-in Particulars"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
