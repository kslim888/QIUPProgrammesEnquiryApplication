<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/preferAndEnglishParentLayout"
        tools:context="com.example.ahshing.qiupprogrammesenquiryapplication.PreferProgrammeAndEnglishProficiency">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Proficiency Test" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/englishProficiencyTest"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:ms_baseColor="@color/colorAccent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proficiency Level : "
                android:layout_marginTop="25dp"
                android:layout_weight="1.5"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/proficiencyLevel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:ms_baseColor="@color/colorAccent"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editTOEFL_PBT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter TOELF"
                android:inputType="number"
                android:textSize="14dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTOEFL_IBT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter TOELF"
                android:inputType="number"
                android:textSize="14dp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Prefer Programmes (Max 3)"
            android:layout_marginTop="25dp"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/preferProgrammeSpinner"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:ms_baseColor="@color/colorAccent"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addPreferProgrammeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="Add more programme"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deletePreferProgrammeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/addPreferProgrammeText"
                android:layout_below="@+id/addPreferProgrammeText"
                android:text="Delete programme"
                android:textAlignment="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/generateResultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate" />

    </LinearLayout>

</ScrollView>



